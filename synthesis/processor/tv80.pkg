 * Description: This file contains data types common to different parts of the
 *              TV80 microprocessor
 */

package tv80;
typedef bit[7:0] word;

/* Flag register layout for GB*/
typedef struct {
    bit Z;
    bit Y;
    bit H;
    bit C;
    bit S;
    bit X;
    bit P;
    bit N;
} Flags_GB;

endpackage
`endif
